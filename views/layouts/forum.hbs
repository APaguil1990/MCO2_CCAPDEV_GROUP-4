<html lang="en">
  <head>
    <link rel="stylesheet" href="css/header.css">
    <link rel="stylesheet" href="css/forum_style.css">
    <script src="js/jquery-3.6.0.min.js"></script>
    <title>Freedom Wall</title>
  </head>
  <body>
    {{> header}} 
    <div class="page">
        <div class="main">
            <div class="create">
                <a href="/user/{{user.id}}"><img class="profile" id="pfp" src="images/pfp.jpg" alt="profile-pic"></a>
                <a href="/create-post">
                    <div class="create-bar">
                        <img src="images/pen-icon.svg" id="pen-icon">
                        <span>Create a Post</span>
                    </div>
                </a>
            </div>
            <div class="forum-container">
                {{#each post}}
                <div class="forum">
                    <div class="top">
                        <div class="top-left">
                            <a href="/user/{{this.user.userId}}"><img src="images/pfp.jpg" class="forum-pfp"></a>
                            <span> {{this.user.username}}</span>
                        </div>
                        <div class="tag">
                            <span>{{this.tag}}</span>
                        </div>
                    </div>
                        <a href="/post/{{this._id}}">
                            <h1 class="title">{{this.title}}</h1>
                        </a>
                    <div class="action">
                        <div class="comment-cont">
                            <svg class="icon comment" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" width="24" height="24" color="#FFFFFF"><defs><style>.cls-637642e7c3a86d32eae6f1b1-1{fill:none;stroke:currentColor;stroke-miterlimit:10;}</style></defs><path class="cls-637642e7c3a86d32eae6f1b1-1" d="M1.5,5.3v9.54a3.82,3.82,0,0,0,3.82,3.82H7.23v2.86L13,18.66h5.73a3.82,3.82,0,0,0,3.82-3.82V5.3a3.82,3.82,0,0,0-3.82-3.82H5.32A3.82,3.82,0,0,0,1.5,5.3Z"></path></svg>
                            <span class="action-text">Comment</span>
                        </div>
                        <div class="up">
                            <svg class="icon thumb-up" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" width="24" height="24" color="#FFFFFF"><defs><style>.cls-637b715ef95e86b59c579e6f-1{fill:#00703C;stroke:currentColor;stroke-miterlimit:10;}</style></defs><path class="cls-637b715ef95e86b59c579e6f-1" d="M.5,12H5.28l6.11-7.06A2,2,0,0,0,12,3.51a2,2,0,0,1,2-2,2.74,2.74,0,0,1,2,.8,2.79,2.79,0,0,1,.8,2c0,2-2.87,5.86-2.87,5.86h6A2.61,2.61,0,0,1,22.5,12.7a2.94,2.94,0,0,1-.05.51L20.89,21A1.91,1.91,0,0,1,19,22.52H11.25a9.13,9.13,0,0,1-4-.95h0a9.08,9.08,0,0,0-4.06-1H.5"></path></svg>
                            <span class="action-text up-num">{{this.upVote}}</span>
                        </div>
                        <div class="down">
                            <svg class="icon thumb-down" data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" width="24" height="24" color="#FFFFFF"><defs><style>.cls-637b715ef95e86b59c579e6e-1{fill:#00703C;stroke:currentColor;stroke-miterlimit:10;}</style></defs><path class="cls-637b715ef95e86b59c579e6e-1" d="M.5,12H5.28l6.11,7.06A2,2,0,0,1,12,20.49a2,2,0,0,0,2,2,2.74,2.74,0,0,0,2-.8,2.79,2.79,0,0,0,.8-1.95c0-2-2.87-5.86-2.87-5.86h6A2.61,2.61,0,0,0,22.5,11.3a2.94,2.94,0,0,0-.05-.51L20.89,3A1.91,1.91,0,0,0,19,1.48H11.25a9.13,9.13,0,0,0-4,1h0a9.08,9.08,0,0,1-4.06,1H.5"></path></svg>
                            <span class="action-text down-num">{{this.downVote}}</span>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    <script src="js/script.js"></script>
  </body>
</html>
